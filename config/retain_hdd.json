{
    "name": "RETAIN_HDD",
    "seed": 3,
    "arch": {
        "type": "RETAIN_GRU",
        "args": {
            "n_feat": 7,
            "Wemb_size": 30,
            "n_gru_a": 1,
            "n_gru_b": 2,
            "gru_sizes": "[50, 60]",
            "fc_sizes": "[40]",
            "mask_value": -100.0,
            "dropout": 0.3,
            "l1": 1e-05
        }
    },
    "dataloader": {
        "type": "H5DatasetNamed",
        "args": {
            "hdf5_source": "data/backblaze_full_normalized.h5",
            "dir": "one_year",
            "valid_ratio": 0.1,
            "test_ratio": 0.1,
            "seed": 2
        }
    },
    "loss": "binary_crossentropy",
    "class_weight": 2,
    "metrics": [
        "binary_accuracy"
    ],
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-03,
            "decay": 1e-7,
            "amsgrad": true
        }
    },
    "callbacks": [
        {
            "name": "ROC",
            "type": "ROCMetric",
            "args": {
                "format": "",
                "target_far": 0.01,
                "max_iter": 10
            }
        },
        {
            "name": "Model saver",
            "type": "ModelCheckpoint",
            "args": {
                "format": "cp-{epoch:03d}.ckpt",
                "save_weights_only": true,
                "verbose": 0
            }
        },
        {
            "name": "Best model",
            "type": "ModelCheckpoint",
            "args": {
                "format": "best.ckpt",
                "monitor": "val_roc",
                "mode": "max",
                "save_best_only": true,
                "save_weights_only": true,
                "verbose": 0
            }
        },
        {
            "name": "Train-val accuracy/loss record",
            "type": "TensorBoard",
            "args": {
                "format": "",
                "histogram_freq": 0,
                "write_images": false,
                "profile_batch": 0
            }
        },
        {
            "name": "ROC curve",
            "type": "ROCCurve",
            "args": {
                "format": "",
                "max_iter": 10,
                "min_FN": 0.001,
                "max_FN": 0.05,
                "n_steps": 40,
                "callback": "save_plot"
            }
        },
        {
            "name": "Contribution heatmap",
            "type": "ContributionHeatmapTensorboard",
            "args": {
                "format": "heatmaps",
                "labels": [
                    "Current Pending Sector Count",
                    "Total Logical Blocks Written",
                    "Total Logical Blocks Read",
                    "Load Cycle Coun",
                    "Power On Hours",
                    "Temperature",
                    "Seek Count"
                ],
                "callback": "save_images",
                "total_size": "-1"
            }
        }
    ],
    "trainer": {
        "epochs": 200,
        "verbose": 1,
        "batch_size": 128
    },
    "restore": {
        "continue": false,
        "overwrite": false
    }
}
