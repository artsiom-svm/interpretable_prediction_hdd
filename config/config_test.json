{
    "name": "Testing template",
    "seed": 2,
    "arch": {
        "type": "LSTM_one_to_one",
        "args": {
            "n_feat": 25,
            "n_lstm": 1,
            "lstm_sizes": "[10]",
            "fc_sizes": "[256, 80]",
            "lstm_dropout": 0.0,
            "dropout": 0.1,
            "activation": "sigmoid"
        }
    },
    "dataloader": {
        "type": "GoogleDataset",
        "args": {
            "hdf5_source": "../google_ssd_data/google_ssd_data.hdf5",
            "dir": "google/ssd/full/merged/seq2bin/shifted/extended",
            "valid_ratio": 0.15,
            "test_ratio": 0.15,
            "seed": 2
        }
    },
    "loss": {
        "type": "BCE_weighted",
        "args": {
            "class_weight": 10
        }
    },
    "metrics": [
        "accuracy",
        {
            "type": "detection_atper_wrapper",
            "args": {}
        }
    ],
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-03,
            "decay": 0,
            "amsgrad": true
        }
    },
    "callbacks": [
        {
            "name": "TensorBoard logger",
            "TensorBoard logger": {
                "type": "TrainValTensorBoard",
                "args": {
                    "log_dir": "log/LSTM2/visualization/",
                    "write_graph": true
                }
            }
        },
        {
            "name": "Model saver",
            "Model saver": {
                "type": "ModelCheckpoint",
                "args": {
                    "filepath": "log/LSTM3/weights.{epoch:03d}-{val_detection_atper:.2f}.hdf5",
                    "monitor": "val_detection_atper",
                    "save_best_only": false,
                    "period": 1,
                    "save_weights_only": true
                }
            }
        },
        {
            "name": "Reduce learning rate",
            "Reduce learning rate": {
                "type": "ReduceLROnPlateau",
                "args": {
                    "monitor": "val_detection_atper",
                    "factor": 0.1,
                    "patience": 10,
                    "verbose": 1,
                    "mode": "max",
                    "min_lr": 1e-08
                }
            }
        },
        {
            "name": "early stop callback",
            "early stop callback": {
                "type": "EarlyStopping",
                "args": {
                    "monitor": "val_detection_atper",
                    "patience": 50,
                    "mode": "max"
                }
            }
        },
        {
            "name": "Detection rate metric",
            "Detection rate metric": {
                "type": "ROC_metric",
                "args": {
                    "min_FN": 0.01,
                    "max_FN": 0.99,
                    "n_step": 100,
                    "log_dir": "log/LSTM3/visualization/",
                    "target_far": 0.01,
                    "max_iter": 10
                }
            }
        }
    ],
    "trainer": {
        "epochs": 500,
        "verbose": 1,
        "batch_size": 512
    }
}
